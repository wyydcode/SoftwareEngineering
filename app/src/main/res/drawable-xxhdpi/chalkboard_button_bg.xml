<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 修改背景颜色为更加柔和的黄色 -->
    <solid android:color="#FFD700" /> <!-- 亮金色 -->

    <!-- 修改边框颜色为稍微深一点的金色 -->
    <stroke android:width="2dp" android:color="#FFA500" /> <!-- 边框改为金色 -->

    <!-- 圆角半径可以保持不变 -->
    <corners android:radius="12dp" /> <!-- 圆角更大，增加按钮的圆滑感 -->

    <!-- 调整内边距使得按钮的文本更具呼吸感 -->
    <padding android:left="20dp" android:right="20dp" android:top="10dp" android:bottom="10dp" />
</shape>
